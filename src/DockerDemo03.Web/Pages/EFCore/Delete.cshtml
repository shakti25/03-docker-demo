@page
@model DockerDemo03.Web.Pages.EFCore.Delete
@{
    ViewData["Title"] = "Delete Todo";
}

<h3>Are you sure you want to delete this TodoItem?</h3>
<div>
    <hr>
    <dl class="row">
        <dt class="col-sm-2">
            <label for="Title" class="form-label">Title</label>
        </dt>
        <dd class="col-sm-10">
            <input type="text" class="form-control" id="Title" name="TodoItem.Title" value="@Model.TodoItem.Title" disabled>
        </dd>
        <dt class="col-sm-2">
            <label for="IsCompleted" class="form-check-label">Completed</label>
        </dt>
        <dd class="col-sm-10">
            <input type="checkbox" class="form-check-input" id="IsCompleted" name="TodoItem.IsCompleted" value="true" @(Model.TodoItem.IsCompleted ? "checked" : "") disabled>
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="TodoItem.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a type="button" class="btn btn-secondary" asp-page="Index">Regresar</a>
    </form>
</div>